@model MvcProject.Models.CrcSubmitViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Crc</h2>

<hr />
<div class="row">
    <div class="col-lg-6">
        @using (Html.BeginForm("SubmitForm", "Crc", FormMethod.Post, new { autocomplete = "off" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.crcModel.binaryValue, htmlAttributes: new { @class = "control-label col-md-2  no-line-break" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.crcModel.binaryValue, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.crcModel.binaryValue, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.crcModel.generator, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.crcModel.generator, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.crcModel.generator, "", new { @class = "text-danger" })
                    </div>
                </div>

                @Html.HiddenFor(model => model.crcModel.remainder)
                @Html.HiddenFor(model => model.crcModel.signal)

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Submit values" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        @Html.Partial("_actionButtons")
    </div>

    <div id="resultDiv">
        <p>
            <span id="submitResult"><b>@Model.result</b></span>
        </p>
    </div>

    <div class="col-lg-4">
        <p>
            <span id="remainderLabel" class="break-words"></span><br />
        </p>
        <p>
            <span id="signalLabel" class="break-words"></span><br />
        </p>
        <p>
            <span id="correctnessLabel"></span><br />
        </p>
    </div>

</div>
